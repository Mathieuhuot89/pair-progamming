{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
{% endblock %}


{% block body %}
<h1 class="text-center mt-4">{{ marque.nom }}</h1>
{# <pre>
    {{ dump(marque) }}
</pre>
<pre>
    {{ dump(voitures) }}
</pre> #}

<h1 class="text-center mt-4">{{ marque.description }}</h1>

    {% for voiture in voitures %}
    	<div class="container mt-4 mb-3">
		<div class="row">
			<div class="col-md-10 m-auto">
				<div class="card mb-3">
					<img src="{{voiture.imageUrl}}" class="card-img-top" alt="{{voiture.nom}}" style="height:650px">
					<div class="card-body">
						<h5 class="card-title">{{voiture.nom}} {{voiture.couleur}} </h5>
						<p class="card-text">{{voiture.description}}</p>
                        <p class="card-text"></p>
                        <p class="card-text">Prix à la journée : {{voiture.prixJournalier}}£</p>
                        <p class="card-text">Stock : {{voiture.stock}}</p>
						<p class="card-text">
							<small class="text-muted">{{voiture.createdAt|date('d/m/Y')}}</small>
						</p>
						<div class="d-grid gap-2 d-md-block">
						<a href="/voiture/{{voiture.id}}" class="btn btn-secondary">Back</a>
						<a href="/reservation/{{voiture.id}}" class="btn btn-primary">Réserver</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
    {% endfor %}
{% endblock %}